{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV", "SNS_TOPIC_ARN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "BACKEND_PREFIX",
        "BACKEND_PORT",
        "AWS_REGION",
        "AWS_DYNAMO_ENDPOINT",
        "AWS_DYNAMO_TASK_TABLE",
        "AWS_DYNAMO_INVITATION_TABLE",
        "AWS_COGNITO_USER_POOL_ID",
        "AWS_COGNITO_CLIENT_ID"
      ]
    },
    "dev:prepare": {},
    "dev": {
      "dependsOn": ["^dev:prepare"],
      "cache": false,
      "persistent": true,
      "env": []
    },
    "localstack:dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "lint": {},
    "format": {}
  }
}
