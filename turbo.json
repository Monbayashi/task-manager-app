{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [],
      "env": []
    },
    "dev:prepare": {},
    "dev": {
      "dependsOn": ["^dev:prepare"],
      "cache": false,
      "persistent": true,
      "env": []
    },
    "localstack:dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:ci": {
      "dependsOn": ["^build"],
      "env": [
        "BACKEND_PREFIX",
        "BACKEND_PORT",
        "BACKEND_LOG_LEVEL",
        "BACKEND_CORS_ORIGIN",
        "INVITATION_LOG_LEVEL",
        "INVITATION_LINK_ORIGIN",
        "INVITATION_RETRY_TIMEOUT",
        "AWS_REGION",
        "AWS_DYNAMO_ENDPOINT",
        "AWS_DYNAMO_TASK_TABLE",
        "AWS_DYNAMO_INVITATION_TABLE",
        "AWS_COGNITO_USER_POOL_ID",
        "AWS_COGNITO_CLIENT_ID",
        "AWS_SES_ENDPOINT",
        "AWS_SES_FROM_EMAIL"
      ]
    },
    "lint": {},
    "format": {}
  }
}
