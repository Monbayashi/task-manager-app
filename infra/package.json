{
  "name": "infra",
  "version": "0.0.1",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "localstack:bootstrap": "cdklocal bootstrap",
    "localstack:deploy": "cdklocal deploy --all --require-approval never",
    "localstack:deploy:dynamo": "cdklocal deploy DynamoDBStack --require-approval never",
    "localstack:deploy:lambda": "cdklocal deploy LambdaStack --require-approval never --force",
    "localstack:watch": "nodemon",
    "localstack:dev": "pnpm turbo build --filter=invitation-service && pnpm localstack:watch"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "aws-cdk": "2.1031.2",
    "aws-cdk-local": "^3.0.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0"
  }
}
